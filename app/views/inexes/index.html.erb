<h1>Listing inexes</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Cost</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @inexes.each do |inex| %>
      <tr>
        <% @cat_list.each do |c| %>
            <% if c.id == inex.category_id %>
            <td><%= c.name %></td>
            <% end %>
        <% end %>
        <td><%= inex.name %></td>
        <td><%= inex.cost %></td>
        <td><%= link_to 'Show', inex %></td>
        <td><%= link_to 'Edit', edit_inex_path(inex) %></td>
        <td><%= link_to 'Destroy', inex, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

